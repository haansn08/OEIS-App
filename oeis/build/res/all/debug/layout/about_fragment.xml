<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/about_logo"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:contentDescription="@string/oeis_logo" />
    <TextView
        android:id="@+id/about_title"
        android:layout_below="@id/about_logo"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/about_copyright"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/about_title"
        android:text="@string/copyright"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/about_oeis_license"
        android:paddingTop="8dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/about_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/about_app_license"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_oeis_license"
        android:text="@string/app_license"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"/>
</RelativeLayout><!-- From: file:/home/shaan/AndroidStudioProjects/OEIS/oeis/src/main/res/layout/about_fragment.xml -->